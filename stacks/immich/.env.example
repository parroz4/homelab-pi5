###################################################################################
# Database
###################################################################################

DB_HOSTNAME=immich_postgres
DB_USERNAME=postgres
DB_PASSWORD=YOUR_SECURE_DATABASE_PASSWORD_HERE
DB_DATABASE_NAME=immich

###################################################################################
# Immich Version
###################################################################################

IMMICH_VERSION=release

###################################################################################
# Paths - MODIFICA QUESTI CON I TUOI PATH REALI
###################################################################################

# Path dove Immich salver√† le foto caricate
# Esempio: /home/user/docker-data/immich/upload
UPLOAD_LOCATION=/path/to/docker-data/immich/upload

# Path delle tue foto/video esistenti (read-only)
# Esempio: /mnt/external-ssd/photos
MEDIA_LOCATION=/path/to/media/photos

# Path per la cache del machine learning
# Esempio: /home/user/docker-data/immich/ml-cache
ML_CACHE_LOCATION=/path/to/docker-data/immich/ml-cache

# Path per i dati del database PostgreSQL
# Esempio: /home/user/docker-data/immich/postgres
DB_DATA_LOCATION=/path/to/docker-data/immich/postgres

###################################################################################
# Optional Settings
###################################################################################

# Timezone
TZ=Europe/Rome

# Log level (verbose, debug, log, warn, error)
LOG_LEVEL=log
